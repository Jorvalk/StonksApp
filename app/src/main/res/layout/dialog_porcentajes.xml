<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editTextNecesidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porcentaje para Necesidades"
        android:inputType="number"
        android:maxLength="3"/>

    <EditText
        android:id="@+id/editTextDeseos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porcentaje para Deseos"
        android:inputType="number"
        android:maxLength="3"/>

    <EditText
        android:id="@+id/editTextAhorro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porcentaje para Ahorro"
        android:inputType="number"
        android:maxLength="3"/>

    <Button
        android:id="@+id/buttonAplicar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar Porcentajes"
        android:backgroundTint="#A47F1A"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>